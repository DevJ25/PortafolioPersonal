<header class="fixed z-10 top-p left-0 bg-slate-900 text-gray-500 flex justify-between items-center w-full min-h-min">
    <div class="flex items-center gap-2">
        <a href="/" class="flex justify-center items-center text-gray-300">
            <img src="./logo1.png" alt="logo" width="100" height="100">
            Darwin Joel
        </a>
    </div>
    <nav class="relative flex flex-col md:flex-row items-center justify-between gap-4" id="nevbar-stiky">
        <button id="menu-button"
            type="button"
            class="bg-slate-900 p-2 rounded-md text-gray-500 md:hidden focus:outline-none">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
            </svg>
        </button>
        <div id="menu-open"
            class="transition-all duration-300 ease-in-out fixed inset-0 bg-slate-900 bg-opacity-95 flex-col gap-2 rounded-md z-50 hidden md:static md:flex md:bg-transparent md:inset-auto md:flex-row md:items-center md:justify-center"
        >
            <ul class="flex flex-col md:flex-row items-center justify-center gap-8 p-8 md:p-0">
                <li><a href="/" class="block py-2 px-4 hover:text-white">Inicio</a></li>
                <li><a href="/acerca" class="block py-2 px-4 hover:text-white">Acerca de mi</a></li>
                <li><a href="/proyects" class="block py-2 px-4 hover:text-white">Proyectos</a></li>
                <li><a href="/habilidades" class="block py-2 px-4 hover:text-white">Habilidades</a></li>
                <li><a href="/contact" class="block py-2 px-4 hover:text-white">Contacto</a></li>
            </ul>
        </div>
    </nav>
</header>

<script>
    const button = document.getElementById("menu-button");
    const menuOpen = document.getElementById("menu-open");

    // Toggle menu
    button?.addEventListener("click", (e) => {
        e.stopPropagation();
        menuOpen?.classList.toggle("hidden");
    });

    // Close menu when clicking outside (mobile only)
    document.addEventListener("click", (e) => {
        if (
            menuOpen &&
            !menuOpen.classList.contains("hidden") &&
            window.innerWidth < 768 &&
            !menuOpen.contains(e.target as Node) &&
            e.target !== button
        ) {
            menuOpen.classList.add("hidden");
        }
    });

    // Close menu when clicking a link (mobile only)
    menuOpen?.querySelectorAll("a").forEach(link => {
        link.addEventListener("click", () => {
            if (window.innerWidth < 768) {
                menuOpen.classList.add("hidden");
            }
        });
    });
</script>