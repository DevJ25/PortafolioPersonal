---
import MainLayout from "../layout/MainLayout.astro";

const posts = [
  {
    title: "Cómo aprendí JavaScript desde cero",
    date: "2023-10-01",
    summary: "Mi experiencia y recursos favoritos para dominar JavaScript como principiante.",
    url: "#"
  },
  {
    title: "Participando en mi primer hackathon",
    date: "2024-02-15",
    summary: "Lecciones, retos y logros de mi primera competencia de programación.",
    url: "#"
  }
  // Agrega más artículos aquí
];
---

<MainLayout title="Blog">
  <main class="w-full min-h-screen flex flex-col items-center justify-center bg-gradient-to-br from-[#0f3a47] via-[#1e5f74] to-[#37749e] py-12">
    <div class="max-w-3xl w-full bg-white/10 backdrop-blur rounded-2xl shadow-2xl p-8">
      <h1 class="text-3xl font-extrabold text-emerald-300 mb-6 text-center">Blog & Artículos</h1>
      <div class="flex flex-col gap-6">
        {posts.map(post => (
          <article class="bg-white/20 rounded-xl p-6 shadow hover:shadow-lg transition-shadow duration-200">
            <h2 class="text-xl font-bold text-slate-100 mb-2">{post.title}</h2>
            <div class="text-xs text-slate-400 mb-2">{post.date}</div>
            <p class="text-slate-200 mb-2">{post.summary}</p>
            <a href={post.url} class="text-emerald-300 hover:underline text-sm">Leer más</a>
          </article>
        ))}
      </div>
    </div>
  </main>
</MainLayout> 